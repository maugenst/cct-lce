{
    "globals": {
        "window": {}
    },
    "testTimeout": 15000,
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["jest-extended"],
    "testRegex": "test/.+test.ts",
    "testPathIgnorePatterns": ["/.+test.+\\.d\\.ts"],
    "transform": {
        "^.+\\.(ts|tsx)$": ["ts-jest", {
            "diagnostics": false,
            "tsconfig": "tsconfig.json"
        }]
    },
    "rootDir": "./",
    "forceExit": true,
    "verbose": true
}
